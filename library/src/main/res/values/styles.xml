<resources>

    <!-- Base application theme. -->
    <style name="XmAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="title_bar_color">?colorPrimary</item>
        <item name="title_bar_title_color">@color/title_bar_title_color</item>
        <item name="title_bar_title_size">17dp</item>
        <item name="title_bar_back_icon">@drawable/icon_title_bar_back</item>
        <item name="title_bar_enable_divider">true</item>
        <item name="title_bar_right_text_color">@color/title_bar_title_color</item>
        <item name="title_bar_right_text_size">16dp</item>
        <item name="status_bar_color">?title_bar_color</item>
        <item name="status_bar_text_is_white">false</item>
        <item name="is_debug">false</item>
        <item name="home_tab_menu">@menu/menu_home_bottom_nav</item>
    </style>

    <style name="CommonBarStyle" >
        <item name="title_bar_color">?attr/title_bar_color</item>
        <item name="title_bar_title_color">?attr/title_bar_color</item>
        <item name="title_bar_title_size">?attr/title_bar_title_size</item>
        <item name="title_bar_back_icon">?attr/title_bar_back_icon</item>
        <item name="title_bar_enable_divider">?attr/title_bar_enable_divider</item>
        <item name="title_bar_right_text_color">?attr/title_bar_right_text_color</item>
        <item name="title_bar_right_text_size">?attr/title_bar_right_text_size</item>
    </style>


    <declare-styleable name="AudioViewStyle">
        <attr name="audio_type" format="enum">
            <enum name="audio_type_auto" value="0" />
            <enum name="audio_type_assets" value="1" />
            <enum name="audio_type_file" value="2" />
            <enum name="audio_type_net" value="3" />
        </attr>
        <attr name="default_backgroud" format="reference" />
        <attr name="anim_backgroud" format="reference" />
        <attr name="loading_drawable" format="reference" />
        <attr name="anim" format="reference" />
        <attr name="audio" format="reference|string" />
        <attr name="anim_type" format="enum">
            <!-- 背景帧动画 -->
            <enum name="type_bg" value="0" />
            <!-- 背景静态 透明度变化 或者属性动画 -->
            <enum name="type_anim_bg" value="1" />
        </attr>
    </declare-styleable>

